@model IEnumerable<Project_Management.Models.Superadmin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int sn = 0;
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">

                <h4 class="card-title">Super Admin </h4>
                <br />
                <button class="btn btn-primary waves-effect waves-light"
                        data-toggle="modal" data-target="#create">
                    <i class="mdi mdi-plus-circle-outline"></i>
                    Add Super Admin
                </button>

                <br />
                <br />


                <div class="table-rep-plugin">
                    <div class="table-responsive mb-0" data-pattern="priority-columns">

                        <table id="datatable-buttons"
                               class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        SN
                                    </th>
                                    <th>
                                        NAME
                                    </th>
                                    <th>
                                        EMAIL
                                    </th>
                                    <th>
                                        USER ROLE
                                    </th>
                                    <th>
                                        STATUS
                                    </th>
                                    <th>ACTION</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    sn++;
                                    <tr>
                                        <td>
                                            @sn
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.email)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.userrole)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.status)
                                        </td>
                                        <td>
                                            <a href="#" data-toggle="modal" data-target="#edit_@item.id">
                                                <i class="fa fa-edit btn btn-info btn-sm"></i>
                                            </a>
                                            |
                                            <a href="#" data-toggle="modal" data-target="#view_@item.id">
                                                <i class="fa fa-info btn btn-success btn-sm"></i>
                                            </a>
                                            |
                                            <a href="#" data-toggle="modal" data-target="#delete_@item.id">
                                                <i class="fa fa-trash btn btn-danger btn-sm"></i>
                                            </a>



                                            <!---------------------- EDIT------------------------>
                                            <div id="edit_@item.id" class="modal fade" role="dialog">
                                                <div class="modal-dialog modal-xl">
                                                    <!-- Modal content-->
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h4 class="modal-title">
                                                                Edit Super Admin
                                                            </h4>
                                                        </div>
                                                        <div class="modal-body">

                                                            <form class="custom-validation" action="@Url.Action("Edit","Superadmins")" method="post">
                                                                @Html.AntiForgeryToken()
                                                                <input type="hidden" name="id" value="@item.id" />
                                                                <div class="form-group">
                                                                    <div class="row">
                                                                        <div class="col-md-6">
                                                                            <label for="packageName">Full Name</label>
                                                                            <input type="text" class="form-control" id="name" name="name" value="@item.name" />
                                                                        </div>
                                                                        <div class="col-md-6">
                                                                            <label for="packageType">
                                                                                Email
                                                                            </label>
                                                                            <input type="text" class="form-control" id="email" name="email" value="@item.email" />
                                                                        </div> 
                                                                    </div>

                                                                    <br>

                                                                    <div class="row">
                                                                        <div class="col-md-6">
                                                                            <label for="maxEmployees">Uuser Role</label>
                                                                            <select required id="userrole" name="userrole" class="form-control">
                                                                                <option value="@item.userrole">@item.userrole</option>
                                                                                <option value="SuperAdmin">SuperAdmin</option>
                                                                                <option value="Admin">Admin</option>
                                                                                <option value="Client">Client</option>
                                                                                <option value="User">User</option>
                                                                            </select>
                                                                        </div> 
                                                                        <div class="col-md-6">
                                                                            <label for="storageUnit">Status</label>
                                                                            <select required name="status" class="form-control">
                                                                                <option value="@item.status">@item.status</option>
                                                                                <option value="Active">Active</option>
                                                                                <option value="Disactivated">Disactivated</option>
                                                                                <option value="Block">Block</option>
                                                                                <option value="Restricted">Restricted</option>
                                                                            </select>
                                                                        </div>
                                                                    </div> 
                                                                </div>

                                                                <br />
                                                                <div class="row">
                                                                    <div class="col-md-12 text-center">
                                                                        <button type="submit" class="btn btn-block btn-success">Submit</button>
                                                                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                                                                    </div>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <!---------------------- DETAILS------------------------>
                                            <div id="view_@item.id" class="modal fade" role="dialog">
                                                <div class="modal-dialog modal-xl">
                                                    <!-- Modal content-->
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h4 class="modal-title">
                                                                Detail Super Admin
                                                            </h4>
                                                        </div>
                                                        <div class="modal-body">

                                                            <form class="custom-validation" action="@Url.Action("Details","Superadmins")" method="post">
                                                                @Html.AntiForgeryToken()
                                                                <input type="hidden" name="id" value="@item.id" />
                                                                <div class="form-group">
                                                                    <div class="row">
                                                                        <div class="col-md-6">
                                                                            <label for="packageName">Full Name</label>
                                                                            <input type="text" class="form-control" id="name" name="name" value="@item.name" readonly />
                                                                        </div>
                                                                        <div class="col-md-6">
                                                                            <label for="packageType">
                                                                                Email
                                                                            </label>
                                                                            <input type="text" class="form-control" id="email" name="email" value="@item.email" readonly/>
                                                                        </div>
                                                                    </div>

                                                                    <br>

                                                                    <div class="row">
                                                                        <div class="col-md-6">
                                                                            <label for="maxEmployees">User Role</label>
                                                                            <input type="text" class="form-control" id="userrole" name="userrole" value="@item.userrole" readonly />
                                                                        </div>
                                                                        <div class="col-md-6">
                                                                            <label for="maxStorageSize">Status</label>
                                                                            <input type="text" class="form-control" name="status" value="@item.status" readonly />
                                                                        </div> 
                                                                    </div> 
                                                                </div>
                                                                <br />
                                                                <div class="row">
                                                                    <div class="col-md-12 text-center">
                                                                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                                                                    </div>
                                                                </div>
                                                            </form>
                                                        </div>

                                                    </div>

                                                </div>
                                            </div>


                                            <!---------------------- DELETE------------------------>
                                            <div id="delete_@item.id" class="modal fade" role="dialog">
                                                <div class="modal-dialog">

                                                    <!-- Modal content-->
                                                    <div class="modal-content">
                                                        <div class="modal-header text-center">
                                                            <h4 class="text-danger">ARE YOU SURE YOU WANT TO DELETE</h4>
                                                        </div>
                                                        <div class="modal-body">
                                                            <H3 class="text-center">
                                                                @item.name
                                                            </H3>
                                                            <form class="" action="@Url.Action("delete","Superadmins")" method="post">
                                                                @Html.AntiForgeryToken()
                                                                <input type="hidden" name="id" value="@item.id" />

                                                                <br />

                                                                <div class="row">
                                                                    <div class="col-md-12 text-center">
                                                                        <button type="submit" class="btn btn-success">Yes</button>
                                                                        <button type="button" class="btn btn-danger" data-dismiss="modal">No</button>
                                                                    </div>
                                                                </div>
                                                            </form>
                                                        </div>

                                                    </div>

                                                </div>
                                            </div>
                                        </td> 
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!----------------------CREATE------------------------>
<div id="create" class="modal fade" role="dialog">
    <div class="modal-dialog modal-xl">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h6>
                    Create Super Admin
                </h6>
            </div>
            <div class="modal-body">
                <form class="custom-validation" action="@Url.Action("create","Superadmins")" method="post">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <label for="packageName">Full Name</label>
                                <input type="text" class="form-control" id="name" name="name" required>
                            </div>
                            <div class="col-md-6">
                                <label for="packageType">
                                    Email
                                </label>
                                <input type="text" class="form-control" id="email" name="email" required>
                            </div> 
                        </div>

                        <br>

                        <div class="row">
                            <div class="col-md-6">
                                <label for="maxEmployees">User Role</label>
                                <select required id="userrole" name="userrole" class="form-control">
                                    <option disabled selected>Please Select</option>
                                    <option value="SuperAdmin">SuperAdmin</option>
                                    <option value="Admin">Admin</option>
                                    <option value="Client">Client</option>
                                    <option value="User">User</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label for="maxStorageSize">Status</label>
                                <select required id="userrole" name="status" class="form-control">
                                    <option disabled selected>Please Select</option>
                                    <option value="Active">Active</option>
                                    <option value="Disactivated">Disactivated</option>
                                    <option value="Block">Block</option>
                                    <option value="Restricted">Restricted</option>
                                </select>
                            </div> 
                        </div> 
                    </div>

                    <br />
                    <div class="row">
                        <div class="col-md-12 text-center">
                            <input type="submit" value="Create" class="btn btn-success" />
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
