                                                        <div class="modal-header">
                                                            <h4 class="modal-title">
                                                                UPDATE PACKAGE
                                                            </h4>
                                                        </div>
                                                        <div class="modal-body">
                                                            <form class="custom-validation" action="@Url.Action("Updatepackage","Companies")" method="post">
                                                                @Html.AntiForgeryToken()
                                                                <input type="hidden" name="id" value="@item.id" />
                                                                <div class="row">
                                                                    <div class="col-lg-12">
                                                                        <div class="card">
                                                                            <div class="card-body">
                                                                                <div class="invoice-title">
                                                                                    <h2 class="font-size-16 fw-bold text-center">
                                                                                        COMPANY'S CURRENT PACKAGE
                                                                                    </h2>
                                                                                </div>
                                                                                <hr>
                                                                                <div class="row">
                                                                                    <div class="col-6">
                                                                                        <address>
                                                                                            <strong>
                                                                                                PACKAGE NAME:
                                                                                            </strong><br>
                                                                                            PACKAGE TYPE: <br>
                                                                                            PACKAGE CATEGORY: <br>
                                                                                            MONTHLY PRICE:<br>
                                                                                            ANNUAL PRICE: <br>
                                                                                            AMOUNT: <br>
                                                                                            PAYMENT DATE: <br>
                                                                                            NEXT PAYMENT DATE: <br>
                                                                                            LICENEC EXPIRES ON:
                                                                                        </address>
                                                                                    </div>
                                                                                    <div class="col-6 text-end">
                                                                                        <address>
                                                                                            <strong>
                                                                                                @item.Package.packagename
                                                                                            </strong><br>
                                                                                            @item.Package.packagetype<br>
                                                                                            @item.Package.packagecategory<br>
                                                                                            @item.Package.monthlyprice<br>
                                                                                            @item.Package.annualprice<br>
                                                                                            @item.amount<br>
                                                                                            @Convert.ToDateTime(item.paymentdate).ToShortDateString()<br>
                                                                                            @Convert.ToDateTime(item.nextpaymentdate).ToShortDateString()<br>
                                                                                            @Convert.ToDateTime(item.licenceexpireson).ToShortDateString()<br>
                                                                                        </address>
                                                                                    </div>
                                                                                </div>

                                                                                <div class="py-2 mt-3">
                                                                                    <h2 class="font-size-15 fw-bold text-center">
                                                                                        CHANGE COMPANY PACKAGE
                                                                                    </h2>
                                                                                </div>
                                                                                <div class="form-group">
                                                                                    <div class="row">
                                                                                        <div class="col-md-6">
                                                                                            <label for="packageName">Package Name</label>
                                                                                            <select class="form-control" name="packageid" required>
                                                                                                <option value="@item.Package.id">@item.Package.packagename</option>
                                                                                                @foreach (var pac in db.Packages.ToList())
                                                                                                {
                                                                                                    <option value="@pac.id">@pac.packagename</option>
                                                                                                }
                                                                                            </select>
                                                                                        </div>
                                                                                        <div class="col-md-6">
                                                                                            <label for="packageName">Amount</label>
                                                                                            <input type="text" required="" name="amount" class="form-control" value="@item.amount" />
                                                                                        </div>
                                                                                    </div>

                                                                                    <br />

                                                                                    <div class="row">
                                                                                        <div class="col-md-4">
                                                                                            <label for="packageType">
                                                                                                Payment Date
                                                                                            </label>
                                                                                            <input type="date" required="" name="paymentdate" class="form-control" value="@Convert.ToDateTime( item.paymentdate).ToString("yyyy-MM-dd")" />
                                                                                        </div>
                                                                                        <div class="col-md-4">
                                                                                            <label for="packageName">Next Payment Date</label>
                                                                                            <input type="date" required="" name="nextpaymentdate" class="form-control" value="@Convert.ToDateTime( item.nextpaymentdate).ToString("yyyy-MM-dd")" />
                                                                                        </div>
                                                                                        <div class="col-md-4">
                                                                                            <label for="packageName">License Expire On</label>
                                                                                            <input type="date" required="" name="licenceexpireson" class="form-control" value="@Convert.ToDateTime( item.licenceexpireson).ToString("yyyy-MM-dd")" />
                                                                                        </div>
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <!-- end row -->

                                                                <br />
                                                                <div class="row">
                                                                    <div class="col-md-12 text-center">
                                                                        <button type="submit" class="btn btn-block btn-success">Submit</button>
                                                                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                                                                    </div>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>


                                        </td>

                                        <td class="align-center text-left">
                                            Register Date: @Convert.ToDateTime(item.insertdate).ToShortDateString()
                                            <br />
                                            Employeese: @item.employees
                                            <br />
                                            Clients: @item.clients
                                            <br />
                                            @*/    calculation for total  /*@
                                            Total Users: 23
                                        </td>
                                        <td class="align-middle text-center">
                                            @*/    package time activities  /*@

                                            @Convert.ToDateTime(item.Package.insertdate).ToShortDateString()
                                        </td>
                                        <td class="align-middle text-center">
                                            @Html.DisplayFor(modelItem => item.status)
                                        </td>

                                        <td class="align-middle text-center">
                                            <a href="#" data-toggle="modal" data-target="#edit__@item.id">
                                                <i class="fa fa-edit btn btn-info btn-sm"></i>
                                            </a>
                                            |
                                            <a href="@Url.Action("Details", "Companies", new { id = item.id })">
                                                <i class="fa fa-info btn btn-success btn-sm"></i>
                                            </a>
                                            |
                                            <a href="#" data-toggle="modal" data-target="#delete_@item.id">
                                                <i class="fa fa-trash btn btn-danger btn-sm"></i>
                                            </a>


                                            <!---------------------- EDIT------------------------>
                                            <div id="edit__@item.id" class="modal fade" role="dialog">
                                                <div class="modal-dialog modal-xl">
                                                    <!-- Modal content-->
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h4 class="modal-title">
                                                                Edit Company
                                                            </h4>
                                                        </div>
                                                        <div class="modal-body">

                                                            <form class="custom-validation" action="@Url.Action("Edit","Companies")" method="post">
                                                                @Html.AntiForgeryToken()
                                                                <input type="hidden" name="id" value="@item.id" />
                                                                <div class="form-group">
                                                                    <div class="row">
                                                                        <div class="col-md-4">
                                                                            <label for="packageName">Company Name</label>
                                                                            <input type="text" class="form-control" id="conapanyname" name="companyname" value="@item.companyname" />
                                                                        </div>
                                                                        <div class="col-md-4">
                                                                            <label for="packageType">
                                                                                Company Email
                                                                            </label>
                                                                            <input type="text" class="form-control" id="companyemail" name="companyemail" value="@item.companyemail" />
                                                                        </div>
                                                                        <div class="col-md-4">
                                                                            <label for="packageType">
                                                                                Company Phone
                                                                            </label>
                                                                            <input type="text" class="form-control" id="companyphone" name="companyphone" value="@item.companyphone" />
                                                                        </div>
                                                                    </div>

                                                                    <br>

                                                                    <div class="row">
                                                                        <div class="col-md-4">
                                                                            <label for="maxEmployees">Company Website</label>
                                                                            <input type="text" class="form-control" id="companywebsite" name="companywebsite" value="@item.companywebsite" />
                                                                        </div>
                                                                        <div class="col-md-4">
                                                                            <label for="storageUnit">Default Currency</label>
                                                                            <select required id="currency" name="currency" class="form-control">
                                                                                <option value="@item.currency">@item.currency</option>
                                                                                <option value="N (NAIRA)">N (NAIRA)</option>
                                                                                <option value="$ (USD)">$ (USD)</option>
                                                                                <option value="€ (EUR)">€ (EUR)</option>
                                                                                <option value="£ (GBP)">£ (GBP)</option>
                                                                            </select>
                                                                        </div>
                                                                        <div class="col-md-4">
                                                                            <label for="storageUnit">Default Timezone</label>
                                                                            <select required id="timezone" name="timezone" class="form-control">
                                                                                <option value="@item.timezone">@item.timezone</option>
                                                                                <option value="Africa/Nigeria">Africa/Nigeria</option>
                                                                                <option value="Asia/Kokata">Asia/Kokata</option>
                                                                                <option value="America/NewYork">America/NewYork</option>
                                                                                <option value="Europe/Berlin">Europe/Berlin</option>
                                                                            </select>
                                                                        </div>
                                                                    </div>

                                                                    <br>

                                                                    <div class="row">
                                                                        <div class="col-md-6">
                                                                            <label class="form-check-label" for="monthlyPlan">Language</label>
                                                                            <input type="text" class="form-control" id="language" name="language" value="@item.language" />
                                                                        </div>

                                                                        <div class="col-md-6">
                                                                            <label class="storageUnit">Status</label>
                                                                            <select required name="status" class="form-control">
                                                                                <option value="@item.status">@item.status</option>
                                                                                <option value="Active">Active</option>
                                                                                <option value="In Active">InActive</option>
                                                                                <option value="License Expired">License Expired</option>
                                                                            </select>
                                                                        </div>
                                                                    </div>

                                                                    <br />

                                                                    <div class="form-group">
                                                                        <div class="row">
                                                                            <div class="col-md-12">
                                                                                <label>
                                                                                    Company Address
                                                                                </label>
                                                                                <textarea class="form-control" aria-label="With textarea" rows="5" id="address" name="address" value="@item.address">@item.address</textarea>
                                                                            </div>
                                                                        </div>
                                                                    </div>

                                                                    <br>

                                                                    <div class="row">

                                                                        <div class="col-md-6">
                                                                            <label class="form-check-label" for="monthlyPlan">Admin Name</label>
                                                                            <small>
                                                                                Account Details ( First company admin )
                                                                            </small>
                                                                            <input type="text" class="form-control" id="acctname" name="acctname" value="@item.acctname" />
                                                                        </div>

                                                                        <div class="col-md-6">
                                                                            <label class="form-check-label" for="monthlyPlan">Admin Email</label>
                                                                            <small>
                                                                                Email ( Login details will be emailed to this email )
                                                                            </small>
                                                                            <input type="text" class="form-control" id="acctemail" name="acctemail" value="@item.acctemail" />
                                                                        </div>
                                                                    </div>
                                                                </div>

                                                                <br />
                                                                <div class="row">
                                                                    <div class="col-md-12 text-center">
                                                                        <button type="submit" class="btn btn-block btn-success">Submit</button>
                                                                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                                                                    </div>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>


                                            <!---------------------- DELETE------------------------>
                                            <div id="delete_@item.id" class="modal fade" role="dialog">
                                                <div class="modal-dialog">

                                                    <!-- Modal content-->
                                                    <div class="modal-content">
                                                        <div class="modal-header text-center">
                                                            <h4 class="text-danger">ARE YOU SURE YOU WANT TO DELETE</h4>
                                                        </div>
                                                        <div class="modal-body">
                                                            <H3 class="text-center">
                                                                @item.companyname
                                                            </H3>
                                                            <form class="" action="@Url.Action("delete","companies")" method="post">
                                                                @Html.AntiForgeryToken()
                                                                <input type="hidden" name="id" value="@item.id" />

                                                                <br />

                                                                <div class="row">
                                                                    <div class="col-md-12 text-center">
                                                                        <button type="submit" class="btn btn-success">Yes</button>
                                                                        <button type="button" class="btn btn-danger" data-dismiss="modal">No</button>
                                                                    </div>
                                                                </div>
                                                            </form>
                                                        </div>

                                                    </div>

                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


