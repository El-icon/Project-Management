@model IEnumerable<Project_Management.Models.Deal>
@{
    ViewBag.Title = "Deals";
    Layout = "~/Views/Shared/_Layout.cshtml";

    Project_Management.Models.project_managementEntities db =
        new Project_Management.Models.project_managementEntities();
    int sn = 0;
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-start justify-content-between mb-3">
                    <div>
                        <h4 class="card-title mb-2">Deal</h4>
                        <button class="btn btn-primary waves-effect waves-light"
                                data-toggle="modal" data-target="#create">
                            <i class="mdi mdi-plus-circle-outline"></i> Add Deal
                        </button>
                    </div>

                    <!-- toggle icon pushed to the far right -->
                    <a href="javascript:void(0);" id="toggleView" class="btn btn-sm btn-outline-secondary align-self-start"
                       title="Switch view" style="font-size:18px;">
                        <i class="fa fa-th-large"></i>
                    </a>
                </div>

                <!-- TABLE VIEW (default) -->
                <div id="ifTable">
                    <div class="table-rep-plugin">
                        <div class="table-responsive mb-0" data-pattern="priority-columns">
                            <table id="datatable-buttons"
                                   class="table table-striped table-bordered">
                                <thead class="thead-light">
                                    <tr>
                                        <th>SN</th>
                                        <th>
                                            DEAL NAME
                                        </th>
                                        <th>
                                            LEAD NAME
                                        </th>
                                        <th>
                                            CONTACT DETAILS
                                        </th>
                                        <th>
                                            DEAL VALUE
                                        </th>
                                        <th>
                                            CLOSE DATE
                                        </th>
                                        <th>
                                            DEAL CATEGORY
                                        </th>
                                        <th>
                                            DEAL AGENT
                                        </th>
                                        <th>
                                            PRODUCT
                                        </th>
                                        <th>
                                            DEAL WATCHER
                                        </th>
                                        <th>
                                            INSERT DATE
                                        </th>
                                        <th>
                                            DEAL STAGES
                                        </th>
                                        <th>ACTIONS</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in db.Deals.OrderBy(p => p.insertdate))
                                    {
                                        sn++;

                                        <tr>
                                            <td>@sn</td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Lead_Contact.name)
                                            </td>
                                            <td>
                                                @item.Lead_Contact.email
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.dealvalue)
                                            </td>
                                            <td>
                                                @Convert.ToDateTime(item.closedate).ToShortDateString()
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.dealcategory)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.dealagent)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.product)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.dealwatcher)
                                            </td>
                                            <td>
                                                @Convert.ToDateTime(item.insertdate).ToShortDateString()
                                            </td>
                                            <td>
                                                <select class="deal-stage form-control"
                                                        data-deal-id="@item.id"
                                                        data-old="@item.dealstages">
                                                    <option value="Generated" @(item.dealstages == "Generated" ? "selected" : "")>Generated</option>
                                                    <option value="Qualified" @(item.dealstages == "Qualified" ? "selected" : "")>Qualified</option>
                                                    <option value="Initial Contact" @(item.dealstages == "Initial Contact" ? "selected" : "")>Initial Contact</option>
                                                    <option value="Schedule Appointment" @(item.dealstages == "Schedule Appointment" ? "selected" : "")>Schedule Appointment</option>
                                                    <option value="Proposal Sent" @(item.dealstages == "Proposal Sent" ? "selected" : "")>Proposal Sent</option>
                                                    <option value="Win" @(item.dealstages == "Win" ? "selected" : "")>Win</option>
                                                    <option value="Lost" @(item.dealstages == "Lost" ? "selected" : "")>Lost</option>
                                                </select>
                                            </td>
                                            <td>
                                                <div class="dropdown d-inline-block">
                                                    <button type="button" class="btn header-item waves-effect text-dark" id="page-header-user-dropdown"
                                                            data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                        <i class="fa fa-ellipsis-v"></i>
                                                        <i class="mdi mdi-chevron-down d-none d-xl-inline-block"></i>
                                                    </button>
                                                    <div class="dropdown-menu dropdown-menu-end">
                                                        <!-- item-->
                                                        <a class="dropdown-item" href="#edit_@item.id" data-toggle="modal">
                                                            <i class="bx bx-edit font-size-16 align-middle me-1"></i>
                                                            Edit
                                                        </a>
                                                        <a class="dropdown-item" href="@Url.Action("Details", "Deals", new { id = item.id })">
                                                            <i class="bx bxs-detail font-size-16 align-middle me-1"></i>
                                                            Details
                                                        </a>
                                                        <a class="dropdown-item" href="#delete_@item.id" data-toggle="modal">
                                                            <i class="bx bx-trash font-size-16 align-middle me-1"></i>
                                                            Delete
                                                        </a>
                                                        <div class="dropdown-divider"></div>
                                                    </div>
                                                </div>

                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- CARD VIEW (grouped by stage) -->
                <div id="ifCards" class="row" style="display:none;">
                    @{
                        var stages = new[] { "Generated", "Qualified", "Initial Contact", "Schedule Appointment", "Proposal Sent", "Win", "Lost" };
                        foreach (var stage in stages)
                        {
                            var dealsInStage = db.Deals.Where(d => d.dealstages == stage).OrderBy(d => d.insertdate).ToList();
                            if (!dealsInStage.Any())  // <-- wrapped in block
                            {
                                continue;
                            }

                            <div class="col-lg-4 mb-4">
                                <div class="card stage-card">
                                    <div class="stage-title">@stage <span class="badge badge-primary ml-2">@dealsInStage.Count</span></div>
                                    <div class="card-body p-2">
                                        @foreach (var deal in dealsInStage)
                                        {
                                            <div class="border rounded p-2 mb-2">
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <strong>@deal.name</strong>
                                                    <span class="text-muted">@deal.dealvalue</span>
                                                </div>
                                                <small class="text-muted">@deal.Lead_Contact.name – @deal.Lead_Contact.email</small><br />
                                                <small>Close: @Convert.ToDateTime(deal.closedate).ToShortDateString()</small>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>

                <script>
                    $('#toggleView').on('click', function () {
                        $('#ifTable').toggle();
                        $('#ifCards').toggle();
                        $(this).find('i').toggleClass('fa-th-large fa-list');
                    });

$('.deal-stage').on('change', function () {
    const $ddl = $(this);
    const dealId = $ddl.data('deal-id');
    const newStage = $ddl.val();

    $.post('@Url.Action("UpdateStage", "Deals")', { id: dealId, stage: newStage })
     .done(function (res) {
         if (res.success) toastr.success("Stage saved");
         else             toastr.error("Save failed");
     })
     .fail(function () {
         toastr.error("Server error");
         $ddl.val($ddl.data('old')); // rollback
     });
});
                </script>
            </div>
        </div>
    </div>
</div>

<!-- Create Modal -->
<div id="create" class="modal fade" role="dialog">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header"><h6>Create Lead_Contact</h6></div>
            @using (Html.BeginForm("Create", "Deals", FormMethod.Post, new { @class = "custom-validation" }))
            {
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-4">
                            <label>Lead Contacts</label>
                            <select class="form-control" name="leadcontactid" required="">
                                <option> Select Contacts</option>
                                @foreach (var item in db.Lead_Contact.ToList())
                                {
                                    <option value="@item.id">@item.name</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label>PipeLine</label>
                            <input type="text" name="pipeline" class="form-control" required />
                        </div>
                        <div class="col-md-4">
                            <label>Deal Name</label>
                            <input type="text" name="name" class="form-control" required />
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-4">
                            <label>
                                Deal Stages
                            </label>
                            <select name="dealstages" class="form-control" required>
                                <option disabled selected>Please Select</option>
                                <option>Generated</option>
                                <option>Qualified</option>
                                <option>Initial Contact</option>
                                <option>Schedule Appointment</option>
                                <option>Proposal Sent</option>
                                <option>Win</option>
                                <option>Lost</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label>Deal Value</label>
                            <input type="text" name="dealvalue" class="form-control" required />
                        </div>
                        <div class="col-md-4">
                            <label>Close Date</label>
                            <input type="date" name="closedate" class="form-control" required />
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-4">
                            <label>Deal Category</label>
                            <select name="dealcategory" class="form-control" required>
                                <option disabled selected>Please Select</option>
                                <option>Best Case</option>
                                <option>Closed</option>
                                <option>Commit</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label>Deal Agent</label>
                            <select class="form-control" name="dealagent" required="">
                                <option> Select Contacts</option>
                                @foreach (var item in db.Employees.ToList())
                                {
                                    <option value="@item.id">@item.name</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label>Products</label>
                            <input type="text" name="product" class="form-control" required />
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-12">
                            <label>Deal Watcher</label>
                            <select class="form-control" name="dealwatcher" required="">
                                <option> Select Employee</option>
                                @foreach (var item in db.Employees.ToList())
                                {
                                    <option value="@item.id">@item.name</option>
                                }
                            </select>
                        </div>
                    </div>

                </div>
                <br />
                <div class="row">
                    <div class="col-md-12 text-center">
                        <button type="submit" class="btn btn-success">Create</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
                <br /> <br />
            }
        </div>
    </div>
</div>
